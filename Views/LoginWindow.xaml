<Window x:Class="SmartTask.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SmartTask - Login"
        Height="300" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#f0f0f0">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Welcome to SmartTask" FontSize="20" FontWeight="Bold" Foreground="#333" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <Label Grid.Row="1" Content="Username:" VerticalAlignment="Center" />
        <TextBox x:Name="UsernameBox" Grid.Row="1" Margin="100,0,0,0" Height="25" />

        <Label Grid.Row="3" Content="Password:" VerticalAlignment="Center" />
        <PasswordBox x:Name="PasswordBox" Grid.Row="3" Margin="100,0,0,0" Height="25" />

        <TextBlock x:Name="ErrorText" Grid.Row="4" Foreground="Red" FontWeight="Bold" TextAlignment="Center" Margin="0,10,0,0" />

        <Button Grid.Row="5" Content="Login" Width="100" Height="35" HorizontalAlignment="Center" Click="LoginButton_Click" Background="#007ACC" Foreground="White" FontWeight="Bold" />
    </Grid>
</Window>
